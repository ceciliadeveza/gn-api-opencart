
{{ header }}{{ column_left }}

<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            <h1>{{ heading_title }}</h1>
        </div>
    </div>
    <div id="gerencianet-container-qrcode">
        <header>
            <img class="rounded mx-auto d-block" src="https://s3-sa-east-1.amazonaws.com/acervo.gerencianet.com.br/imagens/marca-gerencianet.svg" />
        </header>
        <section>
            <div id="qr-code-info">
                <h1>
                    <img src="catalog/view/theme/default/image/payment/pix.svg" style="width: 20px; height: 20px" /> Pagamento via PIX
                </h1>
                <p>Pedido #{{ order_id }} Realizado com Sucesso!</p>
                <p>Escaneie o QR CODE  ao lado no seu dispositivo para realizar o pagamento. </p>
                <div>
                    <input id="input-pix-code" class="form-control" value={{ qrCodeCopy }} readonly />
                    <button id="btn-pix-copy" class="btn"> Copiar </button>            
                </div>
            </div>
            <div id="qr-code">
                <img src={{ qrCodeImage }} />
            </div>
        </section>
    </div>
    {{ footer }}
</div>
